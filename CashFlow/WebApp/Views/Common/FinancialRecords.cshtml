@{
    var BaseUrl = String.Format("http://{0}", @Context.Request.Host);
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<section class="content-header">
    <h1>
        Financial Records
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a><i class="fa fa-dashboard"></i> Home</a>
        </li>
        <li class="active">Financial Recordsr</li>
    </ol>
</section>
<section class="content">
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tabSearch" data-toggle="tab">Search</a></li>
            <li id="tabCad"><a href="#tabCadastro" data-toggle="tab">Financial Records</a></li>
        </ul>
        <div class="tab-content">
            <div class="active tab-pane" id="tabSearch">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Pesquisa de Usuários</h3>
                            </div>
                            <form method="post" name="frmSearchFinancialRecords" id="frmSearchFinancialRecords" action="">
                                <div class="box-body">
                                    <div class="row-form">
                                        <div class="col-md-4 form-group">
                                            <label for="txtSearchDescription"> Description</label>
                                            <input type="text" class="form-control" name="txtSearchDescription" id="txtSearchDescription">
                                        </div>
                                    </div>
                                    <div class="row-form">
                                        <div class="col-md-4 form-group">
                                            <label for="txtSearchDate"><span class="text-danger">*</span> Date</label>
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" onkeydown="javascript: fJS_Mask( this, mData );" maxlength="10" name="txtSearchDate" id="txtSearchDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-form">
                                        <div class="col-md-4 form-group">
                                            <label for="cboSearchRecordType"><span class="text-danger">*</span> Type</label>
                                            <select class="form-control" name="cboSearchRecordType" id="cboSearchRecordType">
                                                <option value="0"></option>
                                                <option value="1">Debit</option>
                                                <option value="2">Credit</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="button" id="btnSearch" class="btn btn-info"><i class="fa fa-search"></i> Pesquisar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <div class="form-group">
                                    <label for="cblType"> Mostrar</label>
                                    <div class="col-xs-show-1">
                                        <select onchange="fJF_GetShowRecords(this)" class="form-control" name="cboLimits" id="cboLimits">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="box-body scrollme">
                                <table id="tableDefault" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th width="55px">ID</th>
                                            <th width="300px">Description</th>
                                            <th width="150px">Date</th>
                                            <th width="150px">Value</th>
                                            <th width="80px">Type</th>
                                            <th width="80px">Status</th>
                                            <th colspan="2" class=text-center width="80px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="scrollbar" id="gridFinancialRecords"></tbody>
                                </table>
                            </div>
                            <div class="box-footer text-right">
                                <button type="button" id="btnPrevious" class="btn btn-info"><i class="fa fa-arrow-left"></i> Anterior</button>
                                <button type="button" id="btnNext" class="btn btn-info"><i class="fa fa-arrow-right"></i> Proximo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="tabCadastro">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Cadastro de Usuários</h3>
                            </div>
                            <form method="post" name="frmFinancialRecords" id="frmFinancialRecords" action="">
                                @Html.Hidden("hdnCode", null, new { id = "hdnCode" })
                                <div class="box-body">
                                    <div class="row-form">
                                        <div class="col-md-3 form-group">
                                            <label for="txtDescription"><span class="text-danger">*</span> Description</label>
                                            <input type="text" class="form-control" name="txtDescription" id="txtDescription">
                                        </div>
                                        <div class="col-md-3 form-group">
                                            <label for="txtDate"><span class="text-danger">*</span> Date</label>
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" onkeydown="javascript: fJS_Mask( this, mData );" maxlength="10" name="txtDate" id="txtDate">
                                            </div>
                                        </div>
                                        <div class="col-md-3 form-group">
                                            <label for="txtValue"><span class="text-danger">*</span> Value</label>
                                            <input type="text" class="form-control" onkeydown="javascript:fJS_Mask(this, mValor);" name="txtValue" id="txtValue">
                                        </div>
                                        <div class="col-md-3 form-group">
                                            <label for="cboType"><span class="text-danger">*</span> Type</label>
                                            <select class="form-control" name="cboType" id="cboType">
                                                <option value="0"></option>
                                                <option value="1">Debit</option>
                                                <option value="2">Credit</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row-form">
                                        <div class="col-md-12 form-group">
                                            <label for="txtObservation"> Observation</label>
                                            <input type="text" class="form-control" name="txtObservation" id="txtObservation">
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="button" id="btnSave" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Salvar</button>
                                    <button type="button" id="btnCancel" class="btn btn-danger"><i class="fa fa-times"></i> Cancelar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/financialrecords.js" type="text/javascript"></script>