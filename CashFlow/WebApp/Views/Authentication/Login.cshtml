@{
    var BaseUrl = String.Format("http://{0}", @Context.Request.Host);
}

<html>
<head>
    <title>Login | CashFlow</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="apple-touch-icon" sizes="76x76" href="~/content/login/bootstrap/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/content/login/bootstrap/assets/img/favicon.png">

    <link rel="stylesheet" href="~/content/login/bootstrap/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/login/bootstrap/assets/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/content/login/bootstrap/assets/vendor/linearicons/style.css">

    <link rel="stylesheet" href="~/content/login/bootstrap/assets/css/main.css">

    <link rel="stylesheet" href="~/content/login/bootstrap/assets/css/demo.css">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
</head>

<body>
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            @Html.Hidden("hdnUrlBase", BaseUrl)
                            @Html.Hidden("hdnLoading", "Carregando")
                            <div class="header">
                                <p class="lead">Identifique-se </p>
                            </div>
                            <div class="row hide" id="error-container">
                                <div class="box-body-notification">
                                    <div class="row-form col-md-12">
                                        <div class="alert alert-danger alert-dismissible">
                                            <h4><i class="icon fa fa-ban"></i> eBuy Error !</h4>
                                            <span id="error-container-message"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row hide" id="warning-container">
                                <div class="box-body-notification">
                                    <div class="row-form col-md-12">
                                        <div class="alert alert-warning alert-dismissible">
                                            <h4><i class="icon fa fa-warning"></i> eBuy Warning !</h4>
                                            <span id="warning-container-message"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form class="form-auth-small" method="post" name="frmLogin" id="frmLogin" action="">
                                <div class="form-group">
                                    <label for="signin-email" class="control-label sr-only">Email</label>
                                    <input type="email" class="form-control" id="txtUser" name="txtUser" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password" class="control-label sr-only">Password</label>
                                    <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Password">
                                </div>
                                <div class="form-group clearfix">
                                    <label class="fancy-checkbox element-left">
                                        <input type="checkbox">
                                        <span>Remember me</span>
                                    </label>
                                </div>
                                <button type="button" class="btn btn-primary btn-lg btn-block" name="btnLogin" id="btnLogin">Entrar</button>
                            </form>
                        </div>
                        <script src="~/content/plugins/jQuery/jQuery-2.2.0.min.js"></script>
                        <script type="text/javascript" src="~/content/js/common.js"></script>
                        <script type="text/javascript" src="~/content/lang/resource.lang.pt-BR.js"></script>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text pull-center">
                            <h1 class="heading">CashFlow</h1>
                            <p>by TesteCarrefour</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/js/login.js" type="text/javascript"></script>